<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ldkspringbase.mapper.BoardMapper">

    <resultMap id="boardResultMap" type="com.ldkspringbase.entity.BoardEntity">
        <id property="id" column="id" />
        <result property="userName" column="user_name" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="date" column="date" />
        <result property="viewCount" column="view_count" />
    </resultMap>

    <select id="getAllBoards" resultMap="boardResultMap">
        SELECT * FROM Boards
    </select>

    <select id="getBoardById" parameterType="long" resultMap="boardResultMap">
        SELECT * FROM Boards WHERE id = #{id}
    </select>

    <insert id="createBoard" parameterType="com.ldkspringbase.entity.BoardEntity">
        INSERT INTO Boards(user_name, title, content, date, view_count)
        VALUES(#{userName}, #{title}, #{content}, #{date}, #{viewCount})
    </insert>

    <update id="updateBoard" parameterType="com.ldkspringbase.entity.BoardEntity">
        UPDATE Boards SET user_name = #{userName}, title = #{title},
                          content = #{content}, date = #{date}, view_count = #{viewCount}
        WHERE id = #{id}
    </update>

    <delete id="deleteBoard" parameterType="long">
        DELETE FROM Boards WHERE id = #{id}
    </delete>

</mapper>

